#ifdef __OBJC__
	#import <Foundation/Foundation.h>
	#import <UIKit/UIKit.h>
#endif

#define PIXEL_PER_UNIT 41
#define SCREEN_FOLLOW_THRESHOLD 50 // pixels from the edge
#define POINT_TO_PIXEL_X(__a__) ( [[UIScreen mainScreen] bounds].size.width/2.0+PIXEL_PER_UNIT*(__a__) )
#define POINT_TO_PIXEL_Y(__a__) ( [[UIScreen mainScreen] bounds].size.height/2.0+PIXEL_PER_UNIT*(__a__) )

