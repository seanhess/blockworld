#!/usr/bin/env node

// Examples:
// ./remote staging deploy
// ./remote list

// see: https://github.com/tsmith/node-control

var control = require('control')
var path = require('path')
var task = control.task
var exec = require('child_process').exec


/////////////////////////////////////
// Servers / Clusters 
/////////////////////////////////////

task('server', 'config for main server', function() {
    return control.hosts({user: 'seanhess', role:'app'}, ["bb.seanhess.net"])
})

task('ls', 'test', function(host) {
    host.ssh('ls')
})

task('deploy', 'deploy', function(host) {
    host.ssh('cd /var/www/bb.seanhess.net/ && git fetch && git reset --hard origin/master && service bb restart')
})

control.begin()